aluop:
j = 0		j = 1
000 +		0		
001 -		>
010 and		==
011 or		>=
100 xor		<
101 shift	!=
110		<=
111		1

cmp output:
	C Z
>	0 0
<	1 0
=	0 1
2->4
>   0001
<   0100
=   0010

JA = sum(output (*) input)


